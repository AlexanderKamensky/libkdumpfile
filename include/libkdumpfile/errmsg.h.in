#ifndef _KDUMP_ERRMSG_H
#define _KDUMP_ERRMSG_H	1

#ifdef  __cplusplus
extern "C" {
#endif

/** Extensible error message buffer. */
typedef struct _kdump_errmsg kdump_errmsg_t;

/** Get the current content of the error string.
 * @param err  Error string object.
 * @returns    NUL-terminated error string.
 */
static inline const char *
kdump_errmsg_str(const kdump_errmsg_t *err)
{
	return *(char* const*)err;
}

#ifdef  __cplusplus
}
#endif

#endif	/* errmsg.h */
